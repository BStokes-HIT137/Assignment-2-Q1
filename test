import csv

output_txt ="E:/chuditchwerkroom/2024_Werkroom/0000_CDU/2024_CDU/2024 SEM 2/HIT137/Working_Python Files/Assignment 2_HIT137_CAS_080/Q1_txt file_output/HIT137_A2_Q1.1.txt"

from collections import Counter
word_total_count = Counter()
with open(output_txt) as file:
    for line in file:
        word_total_count.update(line.split())

top30 = word_total_count.most_common(30)

output_top30_csv ="E:/chuditchwerkroom/2024_Werkroom/0000_CDU/2024_CDU/2024 SEM 2/HIT137/Working_Python Files/Assignment 2_HIT137_CAS_080/Q1_txt file_output/HIT137_A2_Q3.1.csv"
with open(output_top30_csv, 'w', newline='') as csv_file:
    writer = csv.writer(csv_file)
    writer.writerow (['First Python In Built Library Pass of TOP30'])
    writer.writerow(['Word','Frequency'])
    for word, count in top30:
        writer.writerow ([word,count])
print(f'Your top 30 occurances have been saved to {output_top30_csv}')